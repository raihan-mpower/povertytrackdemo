<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f8"

    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LIST"
            android:background="@drawable/selectedlist"
            android:layout_weight="0.50"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="VISITS"
            android:background="@drawable/notselectedlist"
            android:layout_weight="0.50"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:background="#ffffff">

        <ListView
            android:id="@+id/mylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dip"
            android:cacheColorHint="@android:color/transparent"
            android:clickable="true"
            android:divider="#000000"
            android:dividerHeight="2px"
            android:focusable="true"
            android:smoothScrollbar="true" >

        </ListView>
        
    </LinearLayout>
    

</LinearLayout><!-- From: file:/home/raihan/OpenSrpWorkspace/progress%20tracker/app/src/main/res/layout/fragment_myfamilies.xml -->